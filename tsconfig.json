{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@pages/*": ["./pages/*"],
      "@fixtures/*": ["./fixtures/*"],
      "@tests/*": ["./tests/*"],
      "@utils/*": ["./utils/*"],
      "@test-data/*": ["./test-data/*"]
    },
    "types": ["node", "@playwright/test"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@playwright/test"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "playwright-report",
    "test-results",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
